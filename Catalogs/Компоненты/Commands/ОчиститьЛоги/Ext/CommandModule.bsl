// СЛУЖЕБНЫЕ ПРОЦЕДУРЫ И ФУНКЦИИ

#Область СлужебныеПроцедурыИФункции

&НаСервере
Функция ОчиститьВсеЛоги(Компонента) 
	
	Логи = Новый Массив();
	
	Для Каждого Лог Из Компонента.Логи Цикл
		Если Не Лог.Активность Тогда
			Продолжить;
		КонецЕсли;
		
		Результат = Ложь;
		ОписаниеОшибки = Неопределено;
		
		Попытка
			Компоненты.ОчиститьВсеСообщения(Компонента, Лог.ИмяФайла);			
			Результат = Истина;
		Исключение
			ОписаниеОшибки = ОписаниеОшибки();
		КонецПопытки;
		
		Логи.Добавить(
			Новый Структура("Лог, Результат, ОписаниеОшибки",
				Лог.ИмяФайла,
				Результат,
				ОписаниеОшибки));
	КонецЦикла;	
	
	Возврат Логи;
		
КонецФункции

#КонецОбласти
